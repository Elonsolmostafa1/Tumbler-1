<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_up_fragment_contaianer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignUpFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#001935">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/signup_tv_password"
            style="@style/edit_view_layout_container"
            android:layout_marginTop="20dp"
            app:errorEnabled="true"
            app:helperTextTextColor="@color/white"
            app:hintTextColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintTop_toBottomOf="@+id/signup_tv_Email"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/white"
            app:placeholderTextColor="@color/white"
            app:prefixTextColor="@color/white"
            app:suffixTextColor="@color/white">

            <EditText
                android:id="@+id/signup_txt_password"
                style="@style/edit_text"
                android:background="@color/navy"
                android:hint="password"
                android:inputType="textPassword"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signup_tv_password" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/signup_tv_age"
            style="@style/edit_view_layout_container"
            android:layout_marginTop="20dp"
            app:errorEnabled="true"
            app:helperTextTextColor="@color/white"
            app:hintTextColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_tv_name"
            app:placeholderTextColor="@color/white"
            app:prefixTextColor="@color/white"
            app:suffixTextColor="@color/white">

            <EditText
                android:id="@+id/signup_txt_age"
                style="@style/edit_text"
                android:hint="age"
                android:inputType="textPassword"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signup_tv_name" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/signup_tv_name"
            style="@style/edit_view_layout_container"
            android:layout_marginTop="20dp"
            android:alpha="50"
            android:textAllCaps="false"
            app:errorEnabled="true"
            app:hintTextColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_tv_password">

            <EditText
                android:id="@+id/signup_txt_name"
                android:hint="name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_name"
                style="@style/edit_text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/signup_tv_Email"
            android:layout_marginTop="320dp"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            app:boxStrokeColor="@color/light_white"
            app:errorContentDescription="please enter a valid mail"
            app:errorEnabled="true"
            app:hintTextColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/edit_view_layout_container">

            <EditText
                android:id="@+id/signup_txt_email"
                style="@style/edit_text"
                android:hint="email"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signup_tv_Email" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/txt_Header2"
            android:layout_width="285dp"
            android:layout_height="94dp"
            android:text="You'll need a name to make your own posts, customize your blog, and message people."
            android:textAlignment="center"
            android:textColor="#D2D2D2"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/signup_tv_Email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_txt_Header1"
            app:layout_constraintVertical_bias="0.357" />

        <TextView
            android:id="@+id/signup_txt_Header1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="What should we call you?"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="38dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.448"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <TextView
            android:id="@+id/signup_txt_Header3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:text="Already have an account"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/sign_up_with_email_login_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_tv_name"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/sign_up_with_email_login_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/Login"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/sign_up_done_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:enabled="true"
            android:text="Done"
            android:textAlignment="textEnd"
            android:textColor="@color/light_white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/signup_tv_Email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/signup_txt_Header1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.060000002" />

        <ImageView
            android:id="@+id/imageView"

            android:layout_width="32dp"
            android:layout_height="35dp"
            android:src="@drawable/tumblrsp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/signup_tv_Email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.060000002" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>